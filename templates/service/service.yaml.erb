---
services:
  <%= @compose_service %>:
    image: <%= @docker_image %>
<% if @docker_command -%>
    command: <%= @docker_command %>
<% end -%>
<% if @restart -%>
<%     if ['no', 'false', false].include?(@restart) -%>
    restart: "no"
<%     else -%>
    restart: <%= @restart %>
<%     end -%>
<% end -%>
<% if @expose_ports -%>
    ports:
<%   Array(@expose_ports).each do |port| -%>
      - <%= port %>
<%   end -%>
<% end -%>
<% if @environment -%>
    environment:
<%-  @environment.each do |name, value| -%>
<%     if ['yes', 'no', 'true', 'false', true, false].include?(value) -%>
      <%= name %>: "<%= value %>"
<%     else -%>
      <%= name %>: <%= value %>
<%     end -%>
<%-  end -%>
<% end -%>
<% if @env_name && @secrets -%>
    env_file:
      - secrets/<%= @env_name %>.env
<% end -%>
<% if @docker_secret -%>
    secrets:
<%   Array(@docker_secret).each do |secret| -%>
      - <%= secret %>
<%   end -%>
<% end -%>
<% if @docker_volume -%>
    volumes:
<%   Array(@docker_volume).each do |vol| -%>
      - <%= vol %>
<%   end -%>
<% end -%>
<% if @docker_extra_hosts -%>
    extra_hosts:
<%   Array(@docker_extra_hosts).each do |host|  -%>
      - <%= host %>
<%   end -%>
<% end -%>
<% if @docker_ulimits -%>
    ulimits:
<%   @docker_ulimits.each do |name, limit| -%>
<%     if limit.is_a?(Array) -%>
      <%= name %>:
        soft: <%= limit[0] %>
        hard: <%= limit[1] %>
<%     else -%>
      <%= name %>: <%= limit %>
<%     end -%>
<%   end -%>
<% end -%>
<% if @privileged -%>
    privileged: true
<% end -%>
<% if @docker_dns -%>
    dns:
<%   Array(@docker_dns).each do |dns| -%>
      - <%= dns %>
<%   end -%>
<% end -%>
<% if @docker_build -%>
    build:
      context: <%= @docker_context %>
      dockerfile: <%= @docker_file %>
<%   if @docker_build_args.is_a?(Hash) -%>
      args:
<%     @docker_build_args.each do |name, value| -%>
<%       if ['yes', 'no', 'true', 'false', true, false].include?(value) -%>
        <%= name %>: "<%= value %>"
<%       else -%>
        <%= name %>: <%= value %>
<%       end -%>
<%     end -%>
<%   elsif @docker_build_args.is_a?(Array) -%>
      args:
<%     @docker_build_args.each do |value| -%>
        - <%= value %>
<%     end -%>
<%   end -%>
<% end -%>
<% if @docker_mtu -%>

networks:
  default:
    driver: bridge
    driver_opts:
      com.docker.network.driver.mtu: <%= @docker_mtu %>
<% end -%>
<% if @project_volumes -%>

volumes:
<%   @project_volumes.each do |vol| -%>
<%     if vol.is_a?(String) -%>
  <%= vol %>:
<%     else -%>
<%       vol.each do |name, config| -%>
  <%= name %>:
<%         config.each do |key, value| -%>
<%           if value.is_a?(Hash) -%>
    <%= key %>:
<%             value.each do |subkey, subvalue| -%>
      <%= subkey %>: "<%= subvalue %>"
<%             end -%>
<%           elsif value.is_a?(Array) -%>
    <%= key %>:
<%             value.each do |item| -%>
      - "<%= item %>"
<%             end -%>
<%           else -%>
    <%= key %>: <%= value %>
<%           end -%>
<%         end -%>
<%       end -%>
<%     end -%>
<%   end -%>
<% end -%>
<% if @project_secrets_final -%>

secrets:
<%   @project_secrets_final.each do |secret_name, secret_config| -%>
  <%= secret_name %>:
<%     if secret_config.is_a?(Hash) -%>
<%       secret_config.each do |typ, value| -%>
    <%= typ %>: <%= value %>
<%       end -%>
<%     end -%>
<%   end -%>
<% end -%>